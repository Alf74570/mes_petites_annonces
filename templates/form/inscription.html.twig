{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block title %} Bienvenue !{% endblock %}

{% block body %}


    <div class="col-sm-4 offset-sm-4 text-center">
        <div>
            <h2 class="display-5">Formulaire d'inscription</h2>
        </div>
        <br>
        <div class="text-right">
            {{ form_start(form, {'attr': {'class': 'justify-content-center'}})}}
            {{ form_row(form.username, { 'label': 'Pseudo' }) }}
            {{ form_row(form.firstname, { 'label': 'Prénom' }) }}
            {{ form_row(form.lastname, { 'label': 'Nom' }) }}
            {{ form_row(form.email, { 'label': 'Email' }) }}
            {{ form_row(form.phonenumber, { 'label': 'Téléphone' }) }}
            {{ form_row(form.password, { 'label': 'Password' }) }}
            {{ form_row(form.password, { 'label': 'Pasword' }) }}
        <div style="text-align: center">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}, 'label': 'Enregistrer'}) }}
            <input type="submit" value="Annuler" class="btn btn-secondary" />
        </div>
        {{ form_end(form)}}
        </div>

    </div>

{% endblock %}
